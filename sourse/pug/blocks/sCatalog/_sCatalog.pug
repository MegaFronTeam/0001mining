mixin sCatalog(data)
	// start sCatalog
	+b.sCatalog--page.section.pt-0&attributes(attributes)
		.container 
			+e.head-row.row
				.col-auto.d-xl-none
					+e.toggle-filter.toggle-filter-mobile-js
						+icon("filters")
						| Фильтр 
				.col-sm-auto.col Найдено: 
					span.fw-500 135
				.col-12.d-lg-none
				.col
					a.btn.btn-sm.btn-light(href="#") Для Bitcoin
					a.btn.btn-sm.btn-light(href="#") Для Ethcash
					a.btn.btn-sm.btn-light(href="#") Для LTC и DOGE
				.col-auto.d-none.d-sm-block
					select.form-select
						option По цене
						option По названию
			+e.row.row
				- const wrapClass="col-lg-4 col-6"
				- for (var x = 0; x < 2; x++)
					+e.col(class= wrapClass)
						+product-item(`1`,`true`,'Asic майнер Bitmain')
					+e.col(class= wrapClass)
						+product-item(`2`,``)
					+e.col(class= wrapClass)
						+product-item(`3`,`true`)
					+e.col(class= wrapClass)
						+product-item(`4`,``)
				+e.col(class= wrapClass)
					+product-item(`5`,``)
			+pugin()
