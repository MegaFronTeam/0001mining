mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1"  inputmode='numeric')
		+e.btn--plus(type="button")



mixin search()
	+b.search-block.d-xl-block
		form
			input(type="text" placeholder="Искать среди 1000 товаров" inputmode='search')
			button
				+icon("search")

mixin page-head(t,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)

			h1= t

mixin page-headC(t,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)
			.row.row--lg
				.col-xl-3 
					h1= t
				.col-xl-9.d-none.d-xl-block
					.row
						.col-auto
							+e.btn.btn.btn-outline-light(href='#')
								img(src="img/btn-1.png", alt="")
						.col-auto
							+e.btn.btn.btn-outline-light(href='#')
								img(src="img/btn-2.png", alt="")
						.col-auto
							+e.btn.btn.btn-outline-light(href='#')
								img(src="img/btn-3.png", alt="")
mixin page-headProd(t,...items)
	+b.page-head
		- let l = items.length
		.container
			.row.align-items-center
				.col-auto.mb-4
					div(class="prod-tags__item" style="--bg: #F56565") ХИТ 
						span.d-none.d-xl-inline   продаж
				.col
					+breadcrumb('Главная',...items)
			h1= t
mixin parts(elem)
	script.
		addBlock(`#{elem}`)
	div(id=`${elem}Wrap`)