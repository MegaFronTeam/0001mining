mixin arrow()
	.custom-button.swiper-button-hand.swiper-button-hand-prev.swiper-button-prev
		+icon('chevron-left')
	.custom-button.swiper-button-hand.swiper-button-hand-next.swiper-button-next
		+icon('chevron-right')
//- /arrow for swiper-slider
mixin arrow2()
	.splide__arrows
	button(class="splide__arrow splide__arrow--prev")
		+icon('arrow-right') 
	button( class="splide__arrow splide__arrow--next")
		+icon('arrow-right') 
//- /arrow for swiper-slider

